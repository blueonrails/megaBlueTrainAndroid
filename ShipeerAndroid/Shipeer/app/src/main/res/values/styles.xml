    <style name="RadioButtonDrawable" parent="Material.Drawable.RadioButton"/>

    <style name="Material.Drawable.RadioButton">
        <item name="rbd_width">32dp</item>
        <item name="rbd_height">32dp</item>
        <item name="rbd_strokeSize">2dp</item>
        <item name="rbd_radius">10dp</item>
        <item name="rbd_innerRadius">5dp</item>
        <item name="rbd_animDuration">@android:integer/config_mediumAnimTime</item>
        <item name="rbd_strokeColor">@color/shipeer_kazan</item>
    </style>

    <style name="DatePicker" parent="Material.Widget.DatePicker">
        <item name="di_negativeActionTextColor">@color/shipeer_kazan</item>
        <item name="di_positiveActionTextColor">@color/shipeer_kazan</item>
        <item name="dp_selectionColor">@color/shipeer_kazan</item>
