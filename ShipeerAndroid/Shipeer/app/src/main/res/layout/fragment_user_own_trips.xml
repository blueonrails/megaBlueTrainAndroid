<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <ListView
        android:id="@+id/user_own_trips_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <TextView
        android:id="@+id/no_own_trips_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/publish_first_trip_button"
        android:layout_marginBottom="6dp"
        android:text="@string/no_trips_created"
        android:visibility="gone"/>

    <com.rey.material.widget.Button
        android:id="@+id/publish_first_trip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_centerInParent="true"
        android:text="@string/publish_trip"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/user_own_trips_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:progress="50"
        android:indeterminate="true"/>

</RelativeLayout>
